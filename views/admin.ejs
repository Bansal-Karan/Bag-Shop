<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <%- include('./partials/adminHeader') %>

       <!-- Success flash message -->

    <% if(success.length>0){ %>
        <div id="successMessage" class="absolute top-5 left-1/2 -translate-x-1/2 -translate-y-1/2 p-3 rounded-md bg-blue-500">
            <span class="inline-block mt-1 mb-1 text-white">
                <%= success %>
            </span>
        </div>
    <% } %>

    <div class="w-full flex gap-20 h-screen overflow-y-auto p-5">

        <!-- Top bar: Delete All & Create Button -->
        <div class="flex flex-col">
            <a class="text-black py-4 rounded" href="/createproduct">Create New Product</a>
            <a class="text-red-500" href="/deleteall">Delete all</a>
        </div>


                <div class="w-[75%] flex flex-col gap-5 h-screen">
                    <div class="grid grid-cols-3 gap-5 w-full">
                        <% products.forEach(function(product){ %>
                            <div class="flex flex-col border rounded-lg overflow-hidden shadow-md">

                                <!-- Image section -->
                                <div class="h-[12rem] flex items-center justify-center bg-[<%= product.bgcolor %>]">
                                    <img class="h-[10rem] object-contain"
                                        src="data:image/jpeg;base64,<%= product.image.toString('base64') %>" alt="">
                                </div>

                                <!-- Info section -->
                                <div
                                    class="flex justify-between bg-[<%= product.panelcolor %>] items-center px-4 py-4 text-[<%= product.textcolor %>]">
                                    <div>
                                        <h3>
                                            <%= product.name %>
                                        </h3>
                                        <h4>â‚¹ <%= product.price %>
                                        </h4>
                                    </div>
                                </div>
                            </div>
                            <% }) %>
                    </div>

                </div>
    </div>
    <%- include('./partials/footer') %>
    <script>
        // Show success message for 3 seconds
        const successMessage = document.getElementById('successMessage');
        if (successMessage) {
            setTimeout(() => {
                successMessage.style.display = 'none';
            }, 3000);
        }
    </script>
</body>
</html>